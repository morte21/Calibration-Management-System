@page
@model RegisterModelUser
@{
    ViewData["Title"] = "RegisterUser";
    Layout = Request.Path.StartsWithSegments("/Account/Login") ? null : "~/Views/Shared/_LoginLayout.cshtml";

}


<div class=" d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div>
        <div class="row">
            <div>
                <div class="authentication-wrapper authentication-basic container-p-y">
                    <div class="authentication-inner">
                        <!-- Register Card -->
                        <div class="card" style="width:400px">
                            <div class="card-body">
                                <!-- Logo -->
                                <div class="app-brand justify-content-center">
                                    <a href="index.html" class="app-brand-link gap-2">
                                        @*logo*@
                                    </a>
                                </div>
                                <!-- /Logo -->
                                <h4 class="mb-2">User Registration 🚀</h4>

                                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" class="mb-3" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="mb-3">
                                        <label class="form-label">First Name</label>
                                        <input asp-for="Input1.Firstname"
                                               type="text"
                                               class="form-control"
                                               placeholder="Enter your first name"
                                               autofocus />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Last Name</label>
                                        <input asp-for="Input1.Lastname" type="text" class="form-control" placeholder="Enter your last name" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Email</label>
                                        <input asp-for="Input1.Email" type="text" class="form-control" placeholder="Enter your email address" />
                                    </div>
                                    <div class="mb-3 form-password-toggle">
                                        <label class="form-label">Password</label>
                                        <div class="input-group input-group-merge">
                                            <input asp-for="Input1.Password"
                                                   class="form-control"
                                                   placeholder="password"
                                                   aria-describedby="Enter password" />
                                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                        </div>
                                    </div>
                                    <div class="mb-3 form-password-toggle">
                                        <label class="form-label">Confirm Password</label>
                                        <div class="input-group input-group-merge">
                                            <input asp-for="Input1.ConfirmPassword"
                                                   class="form-control"
                                                   placeholder="Confirm password"
                                                   aria-describedby="password" />
                                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="form-floating mb-3">
                                           
                                        </div>
                                    </div>
                                    <button id="registerSubmit" type="submit" class="btn btn-primary d-grid w-100">Register</button>
                                </form>

                                <a asp-action="Index">Back to Main</a>
                            </div>

                        </div>
                        <!-- Register Card -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>


