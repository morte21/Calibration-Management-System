@model Calibration_Management_System.Models.NCR

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>NON-CONFORMITY REPORT</h4>
    <hr />
    <div>
        <div class="card paddAl">
            <div class="col">
                <a href="@Url.Content("~/images/" + Model.fld_pathIMG)" target="_blank">
                    <img src="data:image/png;base64," />
                    View Image
                </a>
                ||
                <a href="@Url.Content("~/documents/" + Model.fld_pathDoc)" target="_blank">
                    <img src="data:image/png;base64," />
                    View PDF
                </a>
            </div>

        </div>
    </div>

    <div>
        <div class="card paddAl" >
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="fld_nonConReportNo" class="control-label"></label>
                        <input readonly asp-for="fld_nonConReportNo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_dateIssue" class="control-label"></label>
                        <input readonly type="date" id="myDateInput" asp-for="fld_dateIssue" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_ctrlNo" class="control-label"></label>
                        <input readonly asp-for="fld_ctrlNo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_IssueTo" class="control-label"></label>
                        <input readonly asp-for="fld_IssueTo" asp-items="@(ViewBag.Dept)" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_mainIncharge" class="control-label"></label>
                        <input readonly asp-for="fld_mainIncharge" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="fld_modelNo" class="control-label"></label>
                        <input readonly asp-for="fld_modelNo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_qty" class="control-label"></label>
                        <input readonly type="number" asp-for="fld_qty" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_withDisposalForm" class="control-label"></label>
                        <input readonly asp-for="fld_withDisposalForm" asp-items="@(ViewBag.NCR)" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_contents" class="control-label"></label>
                        <input readonly asp-for="fld_contents" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_dateCompleted" class="control-label"></label>
                        <input readonly type="date" id="myDateInput" asp-for="fld_dateCompleted" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="fld_status" class="control-label"></label>
                        <input readonly asp-for="fld_status" asp-items="@(ViewBag.Status)" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_calibReportNo" class="control-label"></label>
                        <input readonly asp-for="fld_calibReportNo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_giveDisposeSuspendedForm" class="control-label"></label>
                        <input readonly asp-for="fld_giveDisposeSuspendedForm" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_givenTo" class="control-label"></label>
                        <input readonly asp-for="fld_givenTo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_rcvDisposeSuspendedForm" class="control-label"></label>
                        <input readonly asp-for="fld_rcvDisposeSuspendedForm" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
