@model Calibration_Management_System.Models.FailureReport

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>FailureReport</h4>
    <hr />
    <div>
        <div class="card paddAl">
            <div class="col">
                <a href="@Url.Content("~/images/" + Model.fld_pathIMG)" target="_blank">
                    <img src="data:image/png;base64," />
                    View Image
                </a>
                ||
                <a href="@Url.Content("~/documents/" + Model.fld_pathDoc)" target="_blank">
                    <img src="data:image/png;base64," />
                    View PDF
                </a>
            </div>

        </div>
    </div>

    <div>
        <div class="card paddAl">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="fld_reportNo" class="control-label"></label>
                        <input readonly asp-for="fld_reportNo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_dateIssue" class="control-label"></label>
                        <input readonly type="date" id="myDateInput" asp-for="fld_dateIssue" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_deptsec" class="control-label"></label>
                        <input readonly asp-for="fld_deptsec" asp-items="@(ViewBag.Dept)" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_incharge" class="control-label"></label>
                        <input readonly asp-for="fld_incharge" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_mainincharge" class="control-label"></label>
                        <input readonly asp-for="fld_mainincharge" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="fld_ctrlNo" class="control-label"></label>
                        <input readonly asp-for="fld_ctrlNo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_EquipName" class="control-label"></label>
                        <input readonly asp-for="fld_EquipName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_qty" class="control-label"></label>
                        <input readonly asp-for="fld_qty" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fld_contents" class="control-label"></label>
                        <input readonly asp-for="fld_contents" class="form-control" />
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
