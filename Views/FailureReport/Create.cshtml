@model Calibration_Management_System.Models.FailureReport

@{
    ViewData["Title"] = "Create";
}

<h1>Failure Report</h1>

<h4>Registration</h4>
<hr />
<form asp-action="Create" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="fld_reportNo" class="control-label"></label>
                    <input required asp-for="fld_reportNo" class="form-control" />
                    <span asp-validation-for="fld_reportNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fld_dateIssue" class="control-label"></label>
                    <input required type="date" id="myDateInput" asp-for="fld_dateIssue" class="form-control" />
                    <span asp-validation-for="fld_dateIssue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fld_deptsec" class="control-label"></label>
                    <select required asp-for="fld_deptsec" asp-items="@(ViewBag.Dept)" class="form-control"></select>
                    <span asp-validation-for="fld_deptsec" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fld_incharge" class="control-label"></label>
                    <input asp-for="fld_incharge" class="form-control" />
                    <span asp-validation-for="fld_incharge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fld_mainincharge" class="control-label"></label>
                    <input required asp-for="fld_mainincharge" class="form-control" />
                    <span asp-validation-for="fld_mainincharge" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="fld_ctrlNo" class="control-label"></label>
                    <input asp-for="fld_ctrlNo" class="form-control" />
                    <span asp-validation-for="fld_ctrlNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fld_EquipName" class="control-label"></label>
                    <input asp-for="fld_EquipName" class="form-control" />
                    <span asp-validation-for="fld_EquipName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fld_qty" class="control-label"></label>
                    <input type="number" asp-for="fld_qty" class="form-control" />
                    <span asp-validation-for="fld_qty" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fld_contents" class="control-label"></label>
                    <input asp-for="fld_contents" class="form-control" />
                    <span asp-validation-for="fld_contents" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="_pathIMG">Image Upload:</label>
                        <input type="file" id="_pathIMG" name="_pathIMG" class="form-control-file" accept=".jpg, .jpeg, .png, .gif, .bmp" />
                    </div>

                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="_pathDoc">PDF Upload:  &nbsp;&nbsp;</label>
                        <input type="file" id="_pathDoc" name="_pathDoc" class="form-control-file" accept=".pdf, .xls, .xlsx, .doc, .docx" />
                    </div>
                </div>
            </div>

            <hr style="border-top: 3px double #000000;" />
            <div class="col-md-6">
                <div class="col-md-6">
                    <div class="form-group paddingTop">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a style="padding-left:20px" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
    </div>
</div>
</form>

