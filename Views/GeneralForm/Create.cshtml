@model Calibration_Management_System.Models.GeneralForm

@{
    ViewData["Title"] = "Create";
}

<h1>General Form</h1>

<h4>Registration</h4>
<hr />

<form asp-action="Create" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="fld_no" class="control-label"></label>
                    <input required asp-for="fld_no" class="form-control" />
                    <span asp-validation-for="fld_no" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fld_dateEst" class="control-label"></label>
                    <input required type="date" id="myDateInput" asp-for="fld_dateEst" class="form-control" />
                    <span asp-validation-for="fld_dateEst" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fld_appEquipment" class="control-label"></label>
                    <input required asp-for="fld_appEquipment" class="form-control" />
                    <span asp-validation-for="fld_appEquipment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fld_docNo" class="control-label"></label>
                    <input required asp-for="fld_docNo" class="form-control" />
                    <span asp-validation-for="fld_docNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fld_rev" class="control-label"></label>
                    <input required asp-for="fld_rev" class="form-control" />
                    <span asp-validation-for="fld_rev" class="text-danger"></span>
                </div>
            </div>
            
            <hr style="border-top: 3px double #000000;" />
            <div class="col-md-6">
                <div class="col-md-6">
                    <div class="form-group paddingTop">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a style="padding-left:20px" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        
    </div>
</div>
</form>

