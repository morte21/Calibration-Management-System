@model Calibration_Management_System.Models.EmailList

@{
    ViewData["Title"] = "Create";
}

<h1>Register Email</h1>

<h4>SDP Email Active User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="fld_emailAddress" class="control-label"></label>
                <input type="email" asp-for="fld_emailAddress" class="form-control" />
                <span asp-validation-for="fld_emailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fld_dept" class="control-label"></label>
                <select asp-for="fld_dept" asp-items="@(ViewBag.Dept)" class="form-control" ></select>
                <span asp-validation-for="fld_dept" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fld_contactPerson" class="control-label"></label>
                <input asp-for="fld_contactPerson" class="form-control" />
                <span asp-validation-for="fld_contactPerson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
