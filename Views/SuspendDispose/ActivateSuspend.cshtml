@model Calibration_Management_System.Models.SuspendDisposeRegistration
<!-- Add JavaScript code for confirmation dialog -->
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Your layout file
}
<!-- Add your HTML content -->
<div class="container">
    <h1>SUSPENSION</h1>
    <h3>Are you sure you want to suspend this item?</h3>
    <form id="activateForm" method="post" asp-action="ActivateSuspendConfirmed">
        <input type="hidden" asp-for="id" />
        <button type="button" class="btn btn-primary" onclick="showConfirmation()">Suspend Confirmation</button>
    </form>
    
</div>




<script>
    function showConfirmation() {
        if (confirm("Are you sure you want to proceed?")) {
            // If user clicks OK, submit the form
            document.getElementById('activateForm').submit();
        }
    }
   
</script>