@model Calibration_Management_System.Models.GlobalControllerClass

@{
    ViewData["Title"] = "Edit";
}

<h1>CALIBRATION SCHEDULE</h1>

<h4>Calibration information update</h4>
<hr />

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label hidden>@(ViewBag.EquipmentId)</label>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Set Calibration Date</label>
                    <input readonly asp-for="@Model.CalibrationResultEQP.calibrationdate" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.calibrationdate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_actualCalibDueDate" class="control-label"></label>
                    <input readonly asp-for="@Model.CalibrationResultEQP.fld_actualCalibDueDate" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_actualCalibDueDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_codeNo" class="control-label"></label>
                    <input readonly asp-for="@Model.CalibrationResultEQP.fld_codeNo" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_codeNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_ctrlNo" class="control-label"></label>
                    <input readonly asp-for="@Model.CalibrationResultEQP.fld_ctrlNo" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_ctrlNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_eqpName" class="control-label"></label>
                    <input readonly asp-for="@Model.CalibrationResultEQP.fld_eqpName" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_eqpName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_eqpModelNo" class="control-label"></label>
                    <input readonly asp-for="@Model.CalibrationResultEQP.fld_eqpModelNo" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_eqpModelNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_serial" class="control-label"></label>
                    <input readonly asp-for="@Model.CalibrationResultEQP.fld_serial" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_serial" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_brand" class="control-label"></label>
                    <input readonly asp-for="@Model.CalibrationResultEQP.fld_brand" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_brand" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_term" class="control-label"></label>
                    <select required asp-for="@Model.CalibrationResultEQP.fld_term" asp-items="@(ViewBag.Terms)" id="fld_term" onchange="updateCalibrationDate()" class="form-control"></select>
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_term" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_reqFunction" class="control-label"></label>
                    <select readonly asp-for="@Model.CalibrationResultEQP.fld_reqFunction" asp-items="@(ViewBag.Dept)" class="form-control"></select>
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_reqFunction" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_remarks" class="control-label"></label>
                    <input asp-for="@Model.CalibrationResultEQP.fld_remarks" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_remarks" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_passFail" class="control-label"></label>
                    <select required asp-for="@Model.CalibrationResultEQP.fld_passFail" asp-items="@(ViewBag.Status)" class="form-control"></select>
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_passFail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_imte" class="control-label"></label>
                    <select required asp-for="@Model.CalibrationResultEQP.fld_imte" id="expirationSelect" onchange="updateCalibrationDate()" class="form-control">
                        <option value="">Select</option>
                        <option value="Same Date Expiration">Same Date Expiration</option>
                        <option value="End of Month Expiration">End of Month Expiration</option>
                        <option value="November 30 Expiration">November 30 Expiration</option>
                    </select>
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_imte" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Actual Calibration Date</label>
                    <input required type="date" id="calibrationDateInput" onchange="updateCalibrationDate()" asp-for="@Model.CalibrationResultEQP.fld_calibDate" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_calibDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_calibMonth" class="control-label"></label>
                    <select id="calibMonth" required asp-for="@Model.CalibrationResultEQP.fld_calibMonth" asp-items="@(ViewBag.Months)" class="form-control"></select>
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_calibMonth" class="text-danger"></span>
                </div>
            </div>
            <hr style="border-top: 1px double #000000;" />
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_calibYear" class="control-label"></label>
                    <input type="number" asp-for="@Model.CalibrationResultEQP.fld_calibYear" id="calibrationYearInput" readonly class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_calibYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_nextCalibDate" class="control-label"></label>
                    <input type="date" id="nextCalibrationDateInput" readonly asp-for="@Model.CalibrationResultEQP.fld_nextCalibDate" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_nextCalibDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_nextCalibMonth" class="control-label"></label>
                    <input id="nextCalibrationMonthInput" readonly asp-for="@Model.CalibrationResultEQP.fld_nextCalibMonth" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_nextCalibMonth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_nextCalibYear" class="control-label"></label>
                    <input type="number" id="nextCalibrationYearInput" readonly asp-for="@Model.CalibrationResultEQP.fld_nextCalibYear" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_nextCalibYear" class="text-danger"></span>
                </div>
                
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_internalExternal" class="control-label"></label>
                    <select asp-for="@Model.CalibrationResultEQP.fld_internalExternal" asp-items="@(ViewBag.IntExt)" class="form-control"></select>
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_internalExternal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_supplierExternal" class="control-label"></label>
                    <input asp-for="@Model.CalibrationResultEQP.fld_supplierExternal" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_supplierExternal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_comment" class="control-label"></label>
                    <input asp-for="@Model.CalibrationResultEQP.fld_comment" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_comment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_appStandardEqp" class="control-label"></label>
                    <input asp-for="@Model.CalibrationResultEQP.fld_appStandardEqp" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_appStandardEqp" class="text-danger"></span>
                </div>
                
            </div>

            <div class="col-md-4">
                
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_withNC" class="control-label"></label>
                    <select required asp-for="@Model.CalibrationResultEQP.fld_withNC" class="form-control">
                            <option value="">Select</option>
                            <option value="O">O</option>
                            <option value="X">X</option>
                            <option value="N/A">N/A</option>
                        </select>
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_withNC" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_CalibFR" class="control-label"></label>
                    <select required asp-for="@Model.CalibrationResultEQP.fld_CalibFR" class="form-control">
                            <option value="">Select</option>
                            <option value="O">O</option>
                            <option value="X">X</option>
                            <option value="N/A">N/A</option>
                        </select>
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_CalibFR" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_calibDisSusForm" class="control-label"></label>
                    <select required asp-for="@Model.CalibrationResultEQP.fld_calibDisSusForm" class="form-control">
                            <option value="">Select</option>
                        <option value="O">O</option>
                        <option value="X">X</option>
                        <option value="N/A">N/A</option>
                        </select>
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_calibDisSusForm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_withCalibResult" class="control-label"></label>
                    <select required asp-for="@Model.CalibrationResultEQP.fld_withCalibResult" class="form-control">
                        <option value="">Select</option>
                        <option value="O">O</option>
                        <option value="X">X</option>
                        <option value="N/A">N/A</option>
                    </select>
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_withCalibResult" class="text-danger"></span>
                </div>
            </div>
            <hr style="border-top: 1px double #000000;" />
            <div class="col-md-6">
                
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_dateReturned" class="control-label"></label>
                    <input type="date" asp-for="@Model.CalibrationResultEQP.fld_dateReturned" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_dateReturned" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_dateRecv" class="control-label"></label>
                    <input type="date" asp-for="@Model.CalibrationResultEQP.fld_dateRecv" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_dateRecv" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                <label asp-for="fld_pathIMG" class="control-label"></label>
                <input asp-for="fld_pathIMG" class="form-control" />
                <span asp-validation-for="fld_pathIMG" class="text-danger"></span>
                </div>
                <div class="form-group">
                <label asp-for="fld_pathDoc" class="control-label"></label>
                <input asp-for="fld_pathDoc" class="form-control" />
                <span asp-validation-for="fld_pathDoc" class="text-danger"></span>
                </div>*@
                <div class="form-group">
                    <div>
                        <div class="form-group">
                            <label for="_pathIMG">Image Upload:</label>
                            <input type="file" id="_pathIMG" name="_pathIMG" class="form-control-file" accept=".jpg, .jpeg, .png, .gif, .bmp" />
                        </div>

                        <div class="form-group">
                            <label for="_pathDoc">PDF Upload:  &nbsp;&nbsp;</label>
                            <input type="file" id="_pathDoc" name="_pathDoc" class="form-control-file" accept=".pdf, .xls, .xlsx, .doc, .docx" />
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_changeSticker" class="control-label"></label>
                    <input asp-for="@Model.CalibrationResultEQP.fld_changeSticker" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_changeSticker" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_incharge" class="control-label"></label>
                    <input asp-for="@Model.CalibrationResultEQP.fld_incharge" class="form-control" />
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_incharge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CalibrationResultEQP.fld_stat" class="control-label"></label>
                    <select required asp-for="@Model.CalibrationResultEQP.fld_stat" class="form-control">
                        <option value="">Select</option>
                        <option value="OK">OK</option>
                        <option value="NG">NG</option>
                        <option value="SUSPENDED">SUSPENDED</option>
                        <option value="DISPOSED">DISPOSED</option>
                    </select>
                    <span asp-validation-for="@Model.CalibrationResultEQP.fld_stat" class="text-danger"></span>
                </div>
                <div hidden class="form-group">
                    <input readonly asp-for="@Model.CalibrationResultEQP.fld_month" class="form-control" />
                </div>
                <div hidden class="form-group">
                    <input readonly asp-for="@Model.CalibrationResultEQP.fld_year" class="form-control" />
                </div>
            </div>
            <hr style="border-top: 3px double #000000;" />
            <div class="col-md-4">
                <input type="hidden" asp-for="@Model.CalibrationResultEQP.id" />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>

            </div>
        </div>
    </div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
