                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.fld_registrationDate)
                    </th>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.fld_imte)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.fld_calibDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.fld_calibMonth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.fld_calibYear)
                    </th>
