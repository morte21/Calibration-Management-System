                    <th>@Html.DisplayNameFor(model => model.fld_supplierExternal)</th>
                    <th>@Html.DisplayNameFor(model => model.fld_comment)</th>
                    <th>@Html.DisplayNameFor(model => model.fld_appStandardEqp)</th>
                    <th hidden>@Html.DisplayNameFor(model => model.fld_pathIMG)</th>
                    <th hidden>@Html.DisplayNameFor(model => model.fld_pathDoc)</th>
                    <th hidden>@Html.DisplayNameFor(model => model.fld_stat)</th>
                    <th>@Html.DisplayNameFor(model => model.fld_calibResult)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
