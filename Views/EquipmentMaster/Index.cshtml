                <tr>
                    <th>--A c t i o n--</th>
                    <th>@Html.DisplayNameFor(model => model.fld_codeNo)</th>
                    <th>@Html.DisplayNameFor(model => model.fld_ctrlNo)</th>
                    <th>@Html.DisplayNameFor(model => model.fld_division)</th>
                    <th>@Html.DisplayNameFor(model => model.fld_category)</th>
