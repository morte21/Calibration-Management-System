@model IEnumerable<Calibration_Management_System.Models.EquipmentRegistration>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EQUIPMENT MASTERLIST</h1>


<div >
    <div class="d-flex justify-content-between">
        <div>
            <a asp-action="Create" style="background-color: #007bff; color: #fff; padding: 10px 20px; text-decoration: none;">Create New</a>
        </div>
        <div>
            <button type="button" class="btn btn-dark button-export" onclick="exportToExcelMaster()">Export to Excel</button>
        </div>
    </div>
</div>
    

